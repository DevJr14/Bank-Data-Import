<MudForm @ref="@form" Model="CsvUploadRequest">
    <MudDialog>
        <TitleContent>
            @{
                <MudText Typo="Typo.h6">
                    <MudIcon Icon="@Icons.Material.Filled.UploadFile" Class="mr-3 mb-n1" />
                    Import Csv Data
                </MudText>
            }
        </TitleContent>
        <DialogContent>
            <MudGrid>
                <MudItem xs="12" md="12">
                    <MudItem>
                        @if (_file != null)
                        {
                            <MudAlert>@_file.Name</MudAlert>
                        }
                        else
                        {
                            <MudAlert>@(CsvUploadRequest.FilePath)</MudAlert>
                        }
                        <MudButton HtmlTag="label"
                                    Variant="Variant.Text"
                                    Color="Color.Primary"
                                    Class="my-1"
                                    Size="Size.Small"
                                    StartIcon="@Icons.Filled.CloudUpload"
                                    for="fileInput">
                            Upload File
                        </MudButton>
                        <InputFile id="fileInput" hidden OnChange="UploadFile" />
                    </MudItem>
                </MudItem>
            </MudGrid>
        </DialogContent>
        <DialogActions>
            <MudButton DisableElevation Variant="Variant.Filled" Class="ms-4" OnClick="Cancel">Cancel</MudButton>
            <MudSpacer />
            <MudButton DisableElevation Variant="Variant.Filled" Disabled="@(_file == null)" OnClick="@(async () => await ConfirmImport())" Class="me-4" Color="Color.Success">
                <MudText Class="ms-2">Import</MudText>
            </MudButton>
        </DialogActions>
    </MudDialog>
</MudForm>
